<!DOCTYPE html>
<html>
  <head>
    <title>Problems</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link href="/styles/login.css" rel="stylesheet">
    <script src="/scripts/problems.js" defer></script>
    <style>
      body {
        margin: 0;
      }

      .filler {
        height: 100px;
        width: 100vw;
        background-color: rgb(32, 42, 68);
      }

      #question {
        margin-left: 200px;
        font-size: 30px;
      }

      #choice-grid {
        display: grid;
        margin-top: 50px;
        margin-left: 100px;
        margin-right: 100px;
        grid-template-columns: 500px;
      }

      .choice {
        height: 60px;
        margin-right: 30px;
        margin-left: 30px;
        margin-bottom: 20px;
        border-radius: 5px;
        border: solid;
        border-color: rgba(168, 168, 168, 0.5);
        cursor: pointer;
      }

      .choice:hover {
        opacity: 0.8;
      }
      
      .choice:active {
        opacity: 0.6;
      }

      #next-button {
        margin-left: 130px;
        margin-top: 20px;
        height: 40px;
        width: 120px;
        background-color: rgb(93, 93, 255);
        border: none;
        border-radius: 3px;
        cursor: pointer;
      }

      #next-button:hover {
        opacity: 0.9;
      }
      
      #next-button:active {
        opacity: 0.8;
      }

      #next-text {
        font-size: 14px;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="filler"></div>
    <div style="margin-top: 100px; margin-bottom: 100px;">
      <p id="question">
        
      </p>
      <div id="choice-grid">
        <button class="choice">
          
        </button>
        <button class="choice">
          
        </button>
        <button class="choice">
          
        </button>
        <button class="choice">
          
        </button>
      </div>
      <button id="next-button">
        <span id="next-text">Next</span>
      </button>
    </div>
    <div class="filler" style="position: fixed; bottom:0%;"></div>
  </body>
</html>